<!DOCTYPE html>
<html>
<head>
    <title>Patient List</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
</head>
<body class="p-4">
    <h1 class="mb-4">All Patients</h1>

    <a href="/patients/add" class="btn btn-primary mb-3">+ Add New Patient</a>

    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Full Name</th>
                <th>Contact</th>
                <th>Department</th>
                <th>Doctor</th>
                <th>Date</th>
                <th>Emergency</th>
                <th>Documents</th>
            </tr>
        </thead>
        <tbody>
            <% patients.forEach(patient => { %>
                <tr>
                    <td><%= patient.fullName %></td>
                    <td><%= patient.contactNumber %></td>
                    <td><%= patient.department %></td>
                    <td><%= patient.doctor %></td>
                    <td><%= patient.date ? patient.date.toLocaleDateString() : '' %></td>
                    <td>
                        <% if(patient.emergency) { %>
                            <span class="badge bg-danger">Yes</span>
                        <% } else { %>
                            <span class="badge bg-success">No</span>
                        <% } %>
                    </td>
                    <td>
                        <% patient.documents.forEach(doc => { %>
                            <a href="/<%= doc %>" target="_blank" class="btn btn-sm btn-info mb-1">View</a>
                        <% }) %>
                    </td>
                </tr>
            <% }) %>
        </tbody>
    </table>
</body>
</html>
